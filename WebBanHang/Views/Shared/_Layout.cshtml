<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <meta name="description" content="Bootstrap e-commerce html template similar to Alibaba">
    <meta name="keywords" content="Online template, shop, theme, template, html, css, bootstrap 4">

    <title>NNStore</title>

    <link href="~/Content/images/items/logo.jpg" rel="shortcut icon" type="image/x-icon">

    <!-- jQuery -->
    <script src="~/Content/js/jquery-2.0.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap4 files-->
    <script src="~/Content/js/bootstrap.bundle.min.js" type="text/javascript"></script>

    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Font awesome 5 -->
    <link href="~/Content/fonts/fontawesome/css/all.min.css" type="text/css" rel="stylesheet">

    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />

    <!-- custom javascript -->
    <script src="~/Content/js/script.js" type="text/javascript"></script>

</head>
<body>

    <b class="screen-overlay"></b>

    <header class="section-header">
        <section class="header-main border-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="https://localhost:44382/Admin/Home/Index" class="brand-wrap">
                            <img class="logo" src="~/Content/images/posts/logo.jpg">
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <div class="col-xl-6 col-lg-5 col-md-6">
                        <form action="#" class="search-header">
                            <div class="input-group w-100">

                                <input type="text" class="form-control" placeholder="Nhập tìm kiếm...">

                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i> Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </form> <!-- search-wrap .end// -->
                    </div> <!-- col.// -->
                    <div class="col-xl-4 col-lg-4 col-md-6">
                        <div class="widgets-wrap float-md-right">

                            <div class="widget-header">
                                <a href="https://localhost:44382/Cart/Cart" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-shopping-cart"></i>
                                        <span class="notify" id="CartCount">
                                            @if (@Session["cart"] == null)
                                            {
                                                <em>0</em> }
                                            else
                                            {
                                                @Session["count"]}
                                        </span>
                                    </div>
                                    <small class="text"> Giỏ Hàng </small>
                                </a>
                            </div>
                        </div> <!-- widgets-wrap.// -->
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- container.// -->
        </section> <!-- header-main .// -->



        <nav class="navbar navbar-main navbar-expand-lg border-bottom">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="main_nav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Category/Index")">Tất cả danh mục</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home/Index")">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home/About")">Chính sách giao hàng và đổi trả</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home/Contact")">Liên hệ</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-md-auto">
                        @if (Session["idUser"] != null)
                        {
                            <a href="https://localhost:44382/Admin/HomeAdmin/Index" class="btn btn-warming">Trang Quản Trị</a>
                            <a href="~/Home/Logout" class="btn btn-warming">Đăng xuất </a>
 }
                        else
                        {
                            <a href="~/Home/Login" class="btn btn-warming">Đăng nhập</a>
                            <a href="~/Home/Register" class="btn btn-warming"> Đăng kí</a>
}
                    </ul>
                </div> <!-- collapse .// -->
            </div> <!-- container .// -->
        </nav>

    </header> <!-- section-header.// -->
    @RenderBody()


    <footer class="section-footer bg-secondary">
        <div class="container">
            <section class="footer-top padding-y-lg text-white">
                <div class="row">

                    @*<aside class="col-md col-6">
                            <h6 class="title">Company</h6>
                            <ul class="list-unstyled">
                                <li> <a href="#">About us</a></li>
                                <li> <a href="#">Career</a></li>
                                <li> <a href="#">Find a store</a></li>
                                <li> <a href="#">Rules and terms</a></li>
                                <li> <a href="#">Sitemap</a></li>
                            </ul>
                        </aside>*@
                    <aside class="col-md col-6">
                        <h6 class="title">Trợ giúp</h6>
                        <ul class="list-unstyled">
                            <li> <a href="https://localhost:44382/Home/Contact">Liên Hệ</a></li>


                            <li> <a href="https://www.facebook.com/groups/489188387778617/">Hội nhóm</a></li>
                        </ul>
                    </aside>
                    <aside class="col-md col-6">
                        <h6 class="title">Tài khoản</h6>
                        <ul class="list-unstyled">
                            <li> <a href="https://localhost:44382/Home/Login"> Đăng nhập </a></li>
                            <li> <a href="https://localhost:44382/Home/Register"> Đăng kí </a></li>

                        </ul>
                    </aside>
                    <aside class="col-md">
                        <h6 class="title">Mạng xã hội</h6>
                        <ul class="list-unstyled">
                            <li><a href="https://www.facebook.com/profile.php?id=100007250321361"> <i class="fab fa-facebook"></i> Facebook </a></li>

                            <li><a href="https://www.google.com/search?rlz=1C1CHWL_viVN1000VN1000&tbs=lf:1,lf_ui:10&tbm=lcl&sxsrf=APq-WBtvci7mbubb-HjchvbaHc-Z0YN44Q:1649693211655&q=nn+store&rflfq=1&num=10#rlfi=hd:;si:;mv:[[10.886987399999999,107.2142386],[9.9726132,105.6780069]];tbs:lrf:!1m4!1u3!2m2!3m1!1e1!2m1!1e3!3sIAE,lf:1,lf_ui:10"> <i class="fab fa-instagram"></i> Google </a></li>

                        </ul>
                    </aside>
                </div> <!-- row.// -->
            </section>	<!-- footer-top.// -->
            @*<section class="footer-bottom text-center">

                    <p class="text-white">Privacy Policy - Terms of Use - User Information Legal Enquiry Guide</p>
                    <p class="text-muted"> &copy 2019 Company name, All rights reserved </p>
                    <br>
                </section>*@
        </div><!-- //container -->
    </footer>

@model WebBanHang.Context.HomeModel
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <!-- ========================= SECTION MAIN  ========================= -->
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">

                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <nav class="nav-home-aside">
                            <h6 class="title-category">Danh Mục <i class="d-md-none icon fa fa-chevron-down"></i></h6>
                            <ul class="menu-category">
                                @foreach (var item in Model.listCategory)
                                {
                                    <li>
                                        @*<a href="#">@item.Name</a>*@
                                        @Html.ActionLink(item.Name, "ProductCategory", "Category", new { @Id= item.Id }, null)
                                    </li>
                                }


                                 
                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">

                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active ">
                                    <img src="~/Content/images/slite/800-300-800x300-11.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/slite/S21-800-300-800x300-7.png" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/slite/reno5-800-300-800x300-1.png" alt="Third slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/slite/800-300-800x300-4.png" alt="Four slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/slite/398-110-398x110.png" alt="Five slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/slite/800-300-800x300-10.png" alt="Six slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->

                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>


                            <div class="card-banner border-bottom">
                                <div class="py-3" style="width:100%">
                                    <h6 class="card-title">Điện thoại</h6>

                                    <a href="https://localhost:44382/Category/ProductCategory/1" class="btn btn-secondary btn-sm"> Truy cập </a>
                                </div>
                                <img src="~/Content/images/category/huawei-nova-8-pro-600x600-600x600.jpg" height="80" class="img-bg">
                            </div><!-- col.// -->

                            <div class="card-banner border-bottom">
                                <div class="py-3" style="width:100%">
                                    <h6 class="card-title">Máy tính</h6>

                                    <a href="https://localhost:44382/Category/ProductCategory/2" class="btn btn-secondary btn-sm"> Truy cập </a>
                                </div>
                                <img src="~/Content/images/category/39610_20794_laptop_gaming_acer_nitro_5_eagle_an515_57_56s5_nh_qeksv_001_1.jpg" height="80" class="img-bg">
                            </div><!-- col.// -->

                            <div class="card-banner border-bottom">
                                <div class="py-3" style="width:100%">
                                    <h6 class="card-title">Đồng hồ</h6>

                                    <a href="https://localhost:44382/Category/ProductCategory/4" class="btn btn-secondary btn-sm"> Truy cập </a>
                                </div>
                                <img src="~/Content/images/category/smart-watch.jpg" height="80" class="img-bg">
                            </div><!-- col.// -->


                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->

            </div> <!-- card-body.// -->
        </main> <!-- card.// -->

    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Giảm giá</h3>
                    <p>Thời gian đếm ngược:</p>
                </header><!-- sect-heading -->
                <div class="timer">
                    <div> <span class="num">04</span> <small>Ngày</small></div>
                    <div> <span class="num">12</span> <small>Giờ</small></div>
                    <div> <span class="num">58</span> <small>Phút</small></div>
                    <div> <span class="num">02</span> <small>Giây</small></div>
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.listProduct.Where(n => n.TypeId == 1).Take(4))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("Detail","Product",new { Id =item.Id})" class="img-wrap">
                                <img src="~/Content/images/category/@item.Avatar">
                            </a>
                            <div class="text-wrap p-3">

                                @Html.ActionLink(item.Name, "Detail", "Product", new { Id = item.Id }, null)
                                <span class="badge badge-danger">@item.Price </span>
                            </div>
                        </figure>
                    </div> <!-- col.// -->
                }


            </div>
        </div>

    </section>
    <!-- =============== SECTION DEAL // END =============== -->

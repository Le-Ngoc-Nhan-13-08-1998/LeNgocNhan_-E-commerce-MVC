@model WebBanHang.Context.HomeModel
@{
    ViewBag.Title = "ProductCategory";
}

<section class="section-content padding-y">
    <div class="container">


        <!-- ============================  FILTER TOP  ================================= -->
        <!-- ============================ FILTER TOP END.// ================================= -->


        <div class="row">
            <aside class="col-md-2">

                <article class="filter-group">
                    <h6 class="title">
                        <a class="h5 title">Danh mục tùy chọn </a>
                    </h6>
                    <div class="filter-content collapse show" id="collapse_1">
                        <div class="inner">
                            <ul class="list-menu">
                                @foreach (var item in Model.listCategory)
                                {
                                    <li>
                                        @Html.ActionLink(item.Name, "ProductCategory", "Category", new { @Id = item.Id }, null)
                                    </li>
                                }
                            </ul>
                        </div> <!-- inner.// -->
                    </div>
                </article> <!-- filter-group  .// -->

            </aside> <!-- col.// -->
            <main class="col-md-10">


                <header class="mb-3">
                    <div class="form-inline">
                        <strong class="mr-md-auto">26 sản phẩm </strong>
                        @*<select class="mr-2 form-control">
                                <option>Latest items</option>
                                <option>Trending</option>
                                <option>Most Popular</option>
                                <option>Cheapest</option>
                            </select>*@
                        @*<div class="btn-group">
                                <a href="page-listing-grid.html" class="btn btn-light" data-toggle="tooltip" title="List view">
                                    <i class="fa fa-bars"></i>
                                </a>
                                <a href="page-listing-large.html" class="btn btn-light active" data-toggle="tooltip" title="Grid view">
                                    <i class="fa fa-th"></i>
                                </a>
                            </div>*@
                    </div>
                </header><!-- sect-heading -->

                @foreach (var item in Model.listProduct)
                {
                    <article class="card card-product-list">
                        <div class="row no-gutters">
                            <aside class="col-md-3">
                                <a href="#" class="img-wrap">
                                    <span class="badge badge-danger"> NEW </span>
                                    <img src="~/Content/images/items/@item.Avatar">
                                </a>
                            </aside> <!-- col.// -->
                            <div class="col-md-6">
                                <div class="info-main">

                                    <a href="#" class="h5 title"><b style="font-size: 30px">@Html.ActionLink(item.Name, "Detail", "Product", new { @Id=item.Id }, null)</b></a>
                                    <div class="rating-wrap mb-2">
                                        <ul class="rating-stars">
                                            <li style="width:100%" class="stars-active">
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                            <li>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </li>
                                        </ul>
                                        <div class="label-rating">9/10</div>
                                    </div> <!-- rating-wrap.// -->

                                    <p class="mb-3">
                                        <span class="tag"> <i class="fa fa-check"></i>Chính hảng</span>
                                        <span class="tag"> 1 năm</span>
                                        <span class="tag"> 80 lời bình luận </span>
                                        <span class="tag"> Việt Nam </span>
                                    </p>

                                    <p>
                                        @item.FullDescription
                                    </p>

                                </div> <!-- info-main.// -->
                            </div> <!-- col.// -->
                            <aside class="col-sm-3">
                                <div class="info-aside">
                                    <div class="price-wrap">
                                        <span class="h5 price">@item.Price<a> <sup>đ</sup></a> - @item.PriceDiscount<a><sup><sup>đ</sup></sup></a></span>
                                        <small class="text-muted"></small>
                                    </div> <!-- price-wrap.// -->
                                    <small class="text-warning">Hàng thanh toán trước khi nhận sản phẩm</small>

                                    <p class="text-muted mt-3">NN Store</p>
                                    @*<p class="mt-3">
                                            <a href="#" id="addtocart" class="btn  btn-primary">
                                                <i class="fas fa-shopping-cart"></i>
                                                <span class="text">Thêm vào giỏ hàng</span>
                                            </a>
                                            <a href="@Url.Action("Index", "Home/LienHe")" class="btn btn-light"><i class="fa fa-phone"></i> Liên Hệ </a>
                                        </p>*@

                                </div> <!-- info-aside.// -->
                            </aside> <!-- col.// -->
                        </div> <!-- row.// -->
                    </article> <!-- card-product .// -->
                }



                <nav class="mb-4" aria-label="Page navigation sample">
                    <ul class="pagination">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>


            </main> <!-- col.// -->

        </div>

    </div> <!-- container .//  -->
</section>
